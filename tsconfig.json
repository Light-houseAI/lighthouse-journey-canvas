{
	"compilerOptions": {
		"target": "ES2020",
		"module": "ESNext",
		"moduleResolution": "bundler",
		"noEmit": true,
		"noImplicitAny": true,
		"allowJs": true,
		"strict": true,
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"lib": ["ES2020", "DOM"]
	},
	"include": [
		"packages/**/src/**/*.ts",
		"packages/**/src/**/*.js",
		"packages/**/src/**/*.tsx",
		"packages/**/tests/**/*.ts",
		"packages/**/tests/**/*.js",
		"packages/**/tests/*/*.tsx",
		"**/tailwind.config.js",
		"**/postcss.config.cjs",
		"**/vite.config.ts",
		"**/svelte.config.js"
	],
	"exclude": ["**/assets/**/*", "node_modules", "dist"]
}
