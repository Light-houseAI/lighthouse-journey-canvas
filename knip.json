{
  "$schema": "https://unpkg.com/knip@5/schema.json",
  "workspaces": {
    "packages/*": {
      "entry": ["src/{index,main}.{ts,tsx}"],
      "project": "src/**/*.{ts,tsx}"
    },
    "packages/components": {
      "entry": ["src/index.ts"],
      "project": ["src/**/*.{ts,tsx}"],
      "storybook": {
        "config": [".storybook/main.ts"],
        "entry": ["**/*.stories.{ts,tsx}"]
      },
      "vitest": {
        "config": ["vitest.config.ts"],
        "entry": ["**/*.test.{ts,tsx}"]
      }
    },
    "packages/ui": {
      "entry": [
        "src/main.tsx",
        "tests/e2e-playwright/**/*.spec.ts",
        "tests/e2e/**/*.spec.ts",
        "tests/integration/**/*.test.{ts,tsx}",
        "src/**/*.test.{ts,tsx}"
      ],
      "project": ["src/**/*.{ts,tsx,js,jsx}"],
      "playwright": {
        "config": ["playwright.config.ts"],
        "entry": ["tests/e2e-playwright/**/*.spec.ts", "tests/e2e/**/*.spec.ts"]
      },
      "vitest": {
        "config": ["vitest.config.ts"],
        "entry": ["**/*.test.{ts,tsx}", "tests/**/*.test.{ts,tsx}"]
      }
    },
    "packages/server": {
      "entry": ["src/index.ts", "scripts/**/*.ts"],
      "project": ["src/**/*.{ts,js}", "scripts/**/*.{ts,js}"],
      "vitest": {
        "config": ["vitest.config.ts"],
        "entry": [
          "**/*.test.ts",
          "tests/**/*.test.ts",
          "src/**/__tests__/**/*.test.ts"
        ]
      }
    },
    "packages/schema": {
      "entry": ["src/index.ts"],
      "project": ["src/**/*.ts", "migrations/**/*.{ts,sql}"]
    }
  },
  "ignoreDependencies": [
    "syncpack",
    "@vitest/coverage-v8",
    "cmdk",
    "embla-carousel-react",
    "react-day-picker",
    "react-resizable-panels",
    "vaul"
  ],
  "ignore": [
    "**/*.d.ts",
    "**/node_modules/**",
    "**/.next/**",
    "**/dist/**",
    "**/build/**",
    "**/*.config.{js,ts,cjs,mjs,mts}",
    "**/generated/**",
    "**/mocks/**",
    "packages/server/scripts/generate-api-docs.js",
    "packages/server/scripts/generate-postman-collection.js",
    "packages/server/scripts/generate-swagger.js",
    "packages/server/scripts/run-api-tests.js",
    "packages/server/src/repositories/interfaces/index.ts"
  ],
  "ignoreBinaries": ["scripts/dev.sh", "open", "ts-check"],
  "ignoreExportsUsedInFile": true,
  "includeEntryExports": false,
  "rules": {
    "files": "error",
    "dependencies": "error",
    "devDependencies": "error",
    "unlisted": "error",
    "binaries": "error",
    "unresolved": "off",
    "exports": "off",
    "types": "off",
    "nsExports": "off",
    "nsTypes": "off",
    "enumMembers": "off",
    "duplicates": "error"
  }
}
