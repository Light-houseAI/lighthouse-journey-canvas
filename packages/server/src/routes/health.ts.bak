/**
 * Health Check Routes
 * Provides comprehensive health monitoring endpoints
 */

import { Router } from 'express';

import { HealthController } from '../controllers/health.controller.js';
import { Database } from '../core/container-setup.js';


/**
 * Create health check routes
 */
export function createHealthRoutes(database: any): Router {
  const router: any = Router();
  const healthController = new HealthController(database);

  // Basic health check - lightweight, fast response
  router.get('/health', (req: any, res: any) => healthController.getHealth(req, res));

  // Kubernetes-style probes
  router.get('/live', (req: any, res: any) => healthController.getLiveness(req, res));
  router.get('/ready', (req: any, res: any) => healthController.getReadiness(req, res));

  return router;
}

/**
 * Default health routes for quick setup
 */
export function createBasicHealthRoutes(): Router {
  const router: any = Router();

  // Minimal health check
  router.get('/health', (req: any, res: any) => {
    res.json({
      status: 'healthy',
      timestamp: new Date().toISOString(),
      uptime: process.uptime()
    });
  });

  // Minimal liveness probe
  router.get('/live', (req: any, res: any) => {
    res.json({
      status: 'alive',
      timestamp: new Date().toISOString()
    });
  });

  // Minimal readiness probe
  router.get('/ready', (req: any, res: any) => {
    res.json({
      status: 'ready',
      timestamp: new Date().toISOString()
    });
  });

  return router;
}
