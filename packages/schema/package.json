{
	"name": "@journey/schema",
	"private": true,
	"version": "0.0.2",
	"type": "module",
	"types": "dist/index.d.ts",
	"module": "dist/index.js",
	"repository": "https://github.com/Light-houseAI/lighthouse-journey-canvas/packages/schema",
	"scripts": {
		"test": "vitest run",
		"test:watch": "vitest",
		"test:ui": "vitest --ui",
		"test:coverage": "vitest run --coverage",
		"lint": "eslint .",
		"clean": "rm -rf dist tsconfig.build.tsbuildinfo",
		"build": "tsc --build tsconfig.build.json",
		"rebuild": "pnpm clean && pnpm build",
		"dev": "tsc -p tsconfig.build.json --watch --preserveWatchOutput",
		"db:generate": "cd server && drizzle-kit generate",
		"db:migrate": "tsx server/scripts/run-migrations.ts",
		"db:migrate:status": "cd server && drizzle-kit check",
		"db:push": "drizzle-kit push"
	},
	"devDependencies": {
		"@types/node": "^24.0.0",
		"@vitest/coverage-v8": "^3.2.3",
		"@vitest/ui": "^3.2.3",
		"drizzle-kit": "^0.30.6",
		"typescript": "~5.8.3",
		"vitest": "^3.2.3"
	},
	"dependencies": {
		"@neondatabase/serverless": "github:neondatabase/serverless",
		"drizzle-orm": "^0.39.3",
		"drizzle-zod": "^0.7.1",
		"zod": "^3.25.76",
		"postgres": "^3.4.7"
	}
}
